<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView 
        android:text="Add New Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp" />

    <!-- Task Title -->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etTaskTitle"
        android:hint="Task Title" />

    <!-- Task Description -->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etTaskDescription"
        android:hint="Description (Optional)"
        android:inputType="textMultiLine" />

    <!-- Deadline -->
    <EditText
        android:layout_width="274.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDeadline"
        android:hint="Deadline (yyyy-mm-dd)"
        android:inputType="datetime" />

    <!-- Time Estimate (Short/Medium/Long) -->
    <EditText
        android:layout_width="354.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/etTimeEstimate"
        android:hint="Time Estimate (1=Short, 2=Medium, 3=Long)"
        android:inputType="number" />

    <!-- Importance Level (1=Low, 2=Medium, 3=High) -->
    <EditText
        android:layout_width="356.0dp"
        android:layout_height="133.0dp"
        android:id="@+id/etImportanceLevel"
        android:hint="Importance Level (1=Low, 2=Medium, 3=High)"
        android:inputType="number" />

    <!-- Submit Button -->
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddTask"
        android:text="Add Task" />

</LinearLayout>
